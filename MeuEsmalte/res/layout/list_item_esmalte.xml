<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <TextView
        android:id="@+id/nome_esmalte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/cor_esmalte"
        android:text="TextView"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/data_vencimento_esmalte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="TextView"
        android:textColor="#CCC" />

    <SurfaceView
        android:id="@+id/cor_esmalte"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tipo_esmalte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nome_esmalte"
        android:layout_alignBottom="@+id/nome_esmalte"
        android:layout_toRightOf="@+id/nome_esmalte"
        android:text="TextView"
        android:textColor="#BBB" />

    <TextView
        android:id="@+id/marca_esmalte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_esmalte"
        android:layout_toRightOf="@+id/cor_esmalte"
        android:text="TextView"
        android:textColor="#888" />

</RelativeLayout>
